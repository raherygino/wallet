<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_200"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/user"
            android:tint="@color/grey_600"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Hello"/>
            
            <TextView
                android:id="@+id/home_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-7dp"
                android:textSize="14dp"
                android:text="Username"/>
            
        </LinearLayout>
        
        <ImageView
            android:id="@+id/home_btn_settings"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_settings"
            android:tint="@color/grey_600"
            android:background="@drawable/back_chip_white"
            android:padding="7dp"
            android:layout_alignParentEnd="true"/>
        
    </RelativeLayout>
            
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/blue_600"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:padding="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            
            <TextView
                android:id="@+id/home_title_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:text="Current balance"
                android:layout_marginTop="8dp"/>
            
            <TextView
                android:id="@+id/home_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_marginTop="-4dp"
                android:textColor="@color/white"
                android:text="24,000,000.00"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/back_chip_white"
                android:padding="0dp">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_forward"
                    android:tint="@color/green_400"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+130%"
                    android:textSize="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/green_400"/>
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="Income"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btn_outcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="Outcome"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

