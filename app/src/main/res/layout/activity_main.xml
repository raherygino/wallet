    <!--androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_project"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-7dp"/-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp">
                <TextView
                    android:id="@+id/home_title_activity"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="@color/grey_600"
                    android:text="Activity recent"/>
                <Button
                    android:id="@+id/btn_all_activities"
                    android:layout_height="20dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="14dp"
                    android:padding="0dp"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:drawableEnd="@drawable/exo_ic_chevron_right"
                    android:drawableTint="@color/grey_600"
                    android:textColor="@color/grey_600"
                    android:text="All Activity"
                    android:textAllCaps="false"/>
            </RelativeLayout>
            

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_transaction_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    
    
    
    </LinearLayout>
    <!--/ScrollView-->
    

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:tint="@color/white"
        app:srcCompat="@drawable/ic_orbit_plus"
        android:layout_marginBottom="5dp"/>
    
    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="27dp"
        android:src="@drawable/back_nav_bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:tint="@color/white"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_nav"
        android:padding="7dp"
        android:paddingBottom="12dp">

        <TableLayout
            android:id="@+id/nav_table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_home_outline"
                        android:tint="@color/grey_600"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accueil"
                        android:textSize="10dp"
                        android:textColor="@color/grey_600"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_account_outline"
                        android:tint="@color/grey_600"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profil"
                        android:textSize="10dp"
                        android:textColor="@color/grey_600"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="wrap_content">
                        
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar_outline"
                        android:tint="@color/grey_600"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calendrier"
                        android:textSize="10dp"
                        android:textColor="@color/grey_600"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bell_outline"
                        android:tint="@color/grey_600"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alert"
                        android:textSize="10dp"
                        android:textColor="@color/grey_600"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    
</RelativeLayout>
