<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0.5dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:padding="12dp"
    android:layout_marginTop="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_transaction"
            app:tint="@color/green_400"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_orbit_money_transfer_in" />

        <TextView
            android:id="@+id/title_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="14sp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/date_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="12sp"
            android:layout_below="@+id/title_transaction"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/amount_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="@string/placeholder_amount"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/unity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/ariary"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

 </RelativeLayout>
</androidx.cardview.widget.CardView>


