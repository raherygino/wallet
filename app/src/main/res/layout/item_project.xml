<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_width="240dp"
    android:layout_height="match_parent"
    app:cardElevation="0.2dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="4dp">
    
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <ImageView
            android:id="@+id/item_project_btn_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_orbit_menu_kebab"
            android:tint="@color/grey_600"
            android:rotation="90"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="7dp"/>
    
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="8dp"
            android:layout_height="45dp"
            android:background="@drawable/border_style_primary"/>
    
        <TextView
            android:id="@+id/item_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial Investment"
            android:layout_marginTop="28dp"
            android:layout_marginStart="16dp"
            android:textSize="16dp"/>
        
        <TextView
            android:id="@+id/item_project_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial Investment"
            android:layout_marginTop="45dp"
            android:layout_marginStart="16dp"
            android:textSize="16dp"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="77dp"
            android:background="@color/grey_200"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"/>
        
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_project_title_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit"
                        android:textColor="@color/blue_500"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/item_project_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_500"
                        android:text="80,500"
                        android:textSize="14dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/item_project_title_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_400"
                        android:text="Target"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/item_project_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_400"
                        android:text="1,500"
                        android:textSize="14dp"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
        
    </RelativeLayout> 
</androidx.cardview.widget.CardView>
    
    
